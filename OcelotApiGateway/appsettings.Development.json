{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "System": "Information",
      "Microsoft": "Information"
    }
  },
  "Kestrel": {
    "EndpointDefaults": {
      "Protocols": "Http1AndHttp2"
    },
    "Endpoints": {
      "Http": {
        "Url": "http://localhost:5000"
      },

      "HttpsDefaultCert": {
        "Url": "https://localhost:5001"
      },

      "HttpsInlineCertStore": {
        "Url": "https://localhost:5002",
        "Certificate": {
          "Subject": "localhost",
          "Store": "My",
          "Location": "CurrentUser",
          "AllowInvalid": "false"
        }
      },

      "HttpsInlineCertFile": {
        "Url": "https://localhost:5003",
        "Certificate": {
          "Path": "cert/localhost.pfx"
        }
      },

      "HttpsInlineCertFile2": {
        "Url": "https://*.mwp123.ga",
        "Certificate": {
          "Path": "cert/mwp123.ga.pfx"
        }
      }
    },
    "Certificates": {
      "Default": {
        "Subject": "localhost",
        "Store": "My",
        "Location": "LocalMachine",
        "AllowInvalid": "true"
      }
    }
  }
}
